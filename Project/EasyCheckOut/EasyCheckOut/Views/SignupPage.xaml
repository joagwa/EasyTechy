<?xml version="1.0" encoding="UTF-8"?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			x:Class="EasyCheckOut.SignupPage"
			Title="Create an account">
	<StackLayout>
	<ScrollView VerticalOptions="FillAndExpand">
	<StackLayout Padding="30" Spacing="10">

		<StackLayout>
			<Label Text="EasyTechy" FontSize="26" HorizontalOptions="Center" HeightRequest="50" />
		</StackLayout>

		<StackLayout>
			<Label Text="User Name:" HorizontalOptions="Start"/>
			<Entry Placeholder="Name" />
		</StackLayout>

		<StackLayout>
			<Label Text="Mobile Number:"/>
			<Entry Placeholder="Mobile Number"/>
		</StackLayout>

		<StackLayout>
			<Label Text="Email:" />
			<Entry Placeholder="e.g. example@example.com" />
		</StackLayout>

		<StackLayout>
			<Label Text="Password:" />
			<Entry Placeholder="at least 6 characters" />
		</StackLayout>

		<StackLayout>
			<Label Text="Confirm Password:" />
			<Entry Placeholder="Confirm your Password" />
		</StackLayout>

		<StackLayout Padding="0,40,0,0">
			<Button Text="Create" FontSize="20" TextColor="White" HorizontalOptions="FillAndExpand" BackgroundColor="Green"/>
		</StackLayout>

	</StackLayout>
	</ScrollView>
	</StackLayout>
</BaseView>
