<?xml version="1.0" encoding="UTF-8"?>
<BaseView xmlns="http://xamarin.com/schemas/2014/forms" 
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			x:Class="EasyCheckOut.ConnectPage"
			Title="Connect">
	
	<Grid VerticalOptions="FillAndExpand" 
		  HorizontalOptions="FillAndExpand" 
		  RowSpacing="0" 
		  ColumnSpacing="0">
		<Grid.RowDefinitions>
			<RowDefinition Height="7*" />
			<RowDefinition Height="3*" />
		</Grid.RowDefinitions>
			<Image Source="cart 1.png" BackgroundColor="#D7D4D4">
			</Image>
		<Grid Grid.Row="1" RowSpacing="0" ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>
			<Image Source="connect.png" BackgroundColor="#D7D4D4">
			</Image>
				<StackLayout>
					<Label Text="Please tab or scan your e-trolley" FontSize="18" HorizontalOptions="Center" HeightRequest="20" />
				</StackLayout>	
		</Grid>
	</Grid>
</BaseView>
